{
  "name": "fakelit-production",
  "version": "1.0.0",
  "description": "Fakelit.com - Professional Hosting Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon simple-server.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "echo 'Backend build complete'",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/backend/tests/unit",
    "test:integration": "jest --testPathPattern=src/backend/tests/integration",
    "test:e2e": "jest --testPathPattern=src/backend/tests/e2e",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "node database/migrations/run.js",
    "db:seed": "node database/seeds/run.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "scaling:setup": "node setup-auto-scaling.js",
    "scaling:start": "node start-auto-scaling.js",
    "scaling:stop": "node start-auto-scaling.js --stop",
    "scaling:status": "node start-auto-scaling.js --status",
    "scaling:manual": "node auto-scaling-monitor.js --manual-scale",
    "scaling:logs": "cat fakelit-scaling-logs.json",
    "scaling:alerts": "cat fakelit-scaling-alerts.json",
    "deploy": "npm start"
  },
  "keywords": [
    "mental-health",
    "ai-counseling",
    "avatar-chat",
    "therapy",
    "wellness",
    "counseling",
    "ai-avatars",
    "voice-synthesis",
    "emotional-support",
    "fakelit"
  ],
  "author": "CareConnect Team - Powered by Fakelit.com",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "socket.io": "^4.7.2",
    "stripe": "^18.3.0",
    "twilio": "^5.7.2",
    "uuid": "^9.0.0",
    "web3": "^4.16.0",
    "winston": "^3.10.0",
    "ws": "^8.13.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "faker": "^6.6.6",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/careconnect/ai-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/careconnect/ai-chatbot/issues"
  },
  "homepage": "https://careconnect.com",
  "config": {
    "unsafe-perm": true
  }
}